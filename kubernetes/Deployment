apiVersion: apps/v1
kind: Deployment
metadata:
  name: exam-web
  namespace: dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: exam-web
  template:
    metadata:
      labels:
        app: exam-web
    spec:
      containers:
        - name: application
          image: yuhi1314/phpk8s:30
          imagePullPolicy: Always
          resources:
            requests:
              cpu: "0.1"
              memory: "100Mi"
          volumeMounts:
            - mountPath: /logs
              name: access-logs
          ports:
            - containerPort: 8080
        - name: fluentd-agent
          image: yuhi1314/fluentd-agent:30
          imagePullPolicy: Always
          volumeMounts:
            - mountPath: /logs
              name: access-logs
      volumes:
        - name: access-logs
          emptyDir: {}